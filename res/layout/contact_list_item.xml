<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#199911"
    android:orientation="horizontal">

    <RelativeLayout 
        android:layout_width="120dp"
        android:layout_height="120dp"
        >
	    <ImageView
	        android:id="@+id/contacted_badge"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
    	<TextView
	        android:id="@+id/contacted_name"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:background="#55000000"
	        android:gravity="center_vertical"
	        android:textColor="#fff"
	        android:paddingLeft="6dp"
	        android:paddingRight="6dp"
	        android:layout_alignParentBottom="true"
	        />
    </RelativeLayout>

    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="120dp"
	    android:orientation="vertical"
	    android:paddingLeft="10dp">
	    
        <TextView
            android:id="@+id/contacted_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last contact:"/>
        <TextView
            android:id="@+id/contacted_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone call"/>
        <TextView
            android:id="@+id/contacted_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 days ago"/>
        
        
    </LinearLayout>
    
    

</LinearLayout>