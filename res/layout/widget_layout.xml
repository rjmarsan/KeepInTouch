<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contacted_mainbox"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    android:orientation="horizontal"
    android:background="@drawable/tilebackground"
    android:padding="16dp">

    <RelativeLayout 
	    android:id="@+id/contacted_badge_box"
        android:layout_width="120dp"
        android:layout_height="120dp"
        >
	    <ImageView
	        android:id="@+id/contacted_badge"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
    	<TextView
	        android:id="@+id/contacted_name"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:background="@drawable/textbadge_statelist"
	        android:gravity="center_vertical"
	        android:textColor="#fff"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:paddingLeft="6dp"
	        android:paddingRight="6dp"
	        android:layout_alignParentBottom="true"
	        />
    </RelativeLayout>

    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="120dp"
	    android:orientation="vertical"
	    android:paddingLeft="16dp"
	    android:paddingTop="8dp">
	    
        <TextView
            android:id="@+id/contacted_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="normal"
            android:textSize="22dp"
            android:gravity="center_vertical"
            android:textColor="#222222"
            android:text="Last contact:"/>
        <TextView
            android:id="@+id/contacted_method"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="#222222"
            android:singleLine="true"
            android:text="phone call"/>
        <TextView
            android:id="@+id/contacted_time"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="#222222"
            android:singleLine="true"
            android:text="17 days ago"/>
        <ImageView 
            android:id="@+id/contacted_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            />
            
        
    </LinearLayout>
    
    

</LinearLayout>
