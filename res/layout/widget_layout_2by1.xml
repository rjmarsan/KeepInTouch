<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contacted_mainbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/tilebackground"
    android:padding="8dp">

    <RelativeLayout 
	    android:id="@+id/contacted_badge_box"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
	    <ImageView
	        android:id="@+id/contacted_badge"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:src="@drawable/ic_contact_picture"
	        android:adjustViewBounds="true"
	        android:scaleType="fitStart"/>
    	<TextView
	        android:id="@+id/contacted_name"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        style="@style/ContactBadgeText"
	        android:paddingLeft="6dp"
	        android:paddingRight="6dp"
	        android:layout_alignParentBottom="true"
	        android:visibility="gone"
	        />
    </RelativeLayout>

    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingLeft="8dp"
	    android:paddingTop="0dp">
	    
        <TextView
            android:id="@+id/contacted_title"
            style="@style/ListItemTitleTiny"
            android:text="@string/last_contact"/>
        <TextView
            android:id="@+id/contacted_method"
            style="@style/ListItemTextTiny"
            android:text="phone call"/>
        <TextView
            android:id="@+id/contacted_time"
            style="@style/ListItemTextTiny"
            android:text="17 days ago"/>
        <ImageView 
            android:id="@+id/contacted_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:visibility="gone"
            />
            
        
    </LinearLayout>
    
    

</LinearLayout>
