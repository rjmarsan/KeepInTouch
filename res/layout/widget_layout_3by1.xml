<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contacted_mainbox"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:background="@drawable/tilebackground"
    android:padding="8dp">

    <include layout="@layout/contact_badge"/>

    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingLeft="8dp"
	    android:paddingTop="4dp">
	    
        <TextView
            android:id="@+id/contacted_title"
            style="@style/ListItemTitleMedium"
            android:text="@string/last_contact"
            android:layout_marginBottom="0dp"/>
        
        <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
	        <TextView
	            android:id="@+id/contacted_method"
	            style="@style/ListItemTextMedium"
	            android:text="phone call"/>
	        <ImageView 
	            android:id="@+id/contacted_direction"
				style="@style/OutgoingIndicatorMedium"
	            android:src="@drawable/outgoing"
	            android:paddingLeft="2dp"
	            />
        </LinearLayout>
        
        <TextView
            android:id="@+id/contacted_time"
            style="@style/ListItemTextMedium"
            android:text="17 days ago"/>
            
        
    </LinearLayout>
    
    

</LinearLayout>
