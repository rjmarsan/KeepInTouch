<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ListItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#222222</item>
        <item name="android:gravity">bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ListItemTitleLarge" parent="ListItemText">
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">20dp</item>
    </style>    
    <style name="ListItemTextLarge" parent="ListItemText">
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">17dp</item>
    </style>    
    
    
    <style name="ListItemTitleMedium" parent="ListItemText">
        <item name="android:layout_height">21dp</item>
        <item name="android:textSize">18dp</item>
    </style>    
    <style name="ListItemTextMedium" parent="ListItemText">
        <item name="android:layout_height">18dp</item>
        <item name="android:textSize">13dp</item>
    </style>    
    <style name="OutgoingIndicatorMedium" parent="ListItemText">
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">18dp</item>
    </style>    
    
    <style name="ListItemTitleSmall" parent="ListItemText">
        <item name="android:layout_height">18dp</item>
        <item name="android:textSize">14dp</item>
    </style>    
    <style name="ListItemTextSmall" parent="ListItemText">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">10dp</item>
    </style>    
    
    
    <style name="ContactBadgeText">
        
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/textbadge_statelist</item>
    </style>
    
    
</resources>